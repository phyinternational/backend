{
  "info": {
    "_postman_id": "SUBCATEGORY-API-2025-09-17",
    "name": "Subcategory API (Raajsi Backend)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Complete Postman collection for Subcategory endpoints with Zod validation (public and admin routes)"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Test Subcategory API",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/test",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "test"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Subcategories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/getAll?parentCategory={{parentCategoryId}}&isActive=true&search=rings&page=1&limit=10&sort=sortOrder",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "getAll"],
              "query": [
                {
                  "key": "parentCategory",
                  "value": "{{parentCategoryId}}",
                  "description": "Filter by parent category ID",
                  "disabled": true
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status (true/false)",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "rings",
                  "description": "Search by name (max 100 chars)",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (min 1)",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (1-100)",
                  "disabled": true
                },
                {
                  "key": "sort",
                  "value": "sortOrder",
                  "description": "Sort by: name, -name, createdAt, -createdAt, sortOrder, -sortOrder",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Subcategory",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/get/{{subcategoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "get", "{{subcategoryId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Subcategories by Parent",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/parent/{{parentCategoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "parent", "{{parentCategoryId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Subcategory Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/{{subcategoryId}}/products?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "{{subcategoryId}}", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Add Subcategory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Silver Rings\",\n  \"slug\": \"silver-rings\",\n  \"description\": \"Beautiful collection of silver rings for all occasions\",\n  \"parentCategory\": \"{{parentCategoryId}}\",\n  \"imageUrl\": \"https://example.com/silver-rings.jpg\",\n  \"seoTitle\": \"Silver Rings Collection\",\n  \"seoDescription\": \"Shop the best silver rings collection with premium quality\",\n  \"sortOrder\": 1\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "add"]
            }
          },
          "response": []
        },
        {
          "name": "Update Subcategory",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Silver Rings\",\n  \"description\": \"Updated description for silver rings collection\",\n  \"seoTitle\": \"Updated SEO Title\",\n  \"isActive\": true,\n  \"sortOrder\": 2\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/update/{{subcategoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "update", "{{subcategoryId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Subcategory",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/delete/{{subcategoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "delete", "{{subcategoryId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Sort Order (Bulk)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subcategories\": [\n    {\n      \"id\": \"{{subcategoryId1}}\",\n      \"sortOrder\": 1\n    },\n    {\n      \"id\": \"{{subcategoryId2}}\",\n      \"sortOrder\": 2\n    },\n    {\n      \"id\": \"{{subcategoryId3}}\",\n      \"sortOrder\": 3\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/sort-order",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "sort-order"]
            }
          },
          "response": []
        },
        {
          "name": "Toggle Active Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/subcategory/toggle-status/{{subcategoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subcategory", "toggle-status", "{{subcategoryId}}"]
            }
          },
          "response": []
        }
      ]
    },
