# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/raajsi

# JWT Secrets
JWT_SECRET_USER=your-user-jwt-secret-key
JWT_SECRET_ADMIN=your-admin-jwt-secret-key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 2Factor OTP Service
TWOFACTOR_API_KEY=XXXX-XXXX-XXXX-XXXX-XXXX
OTP_TEMPLATE_NAME=OTP1

# Firebase (Optional - for Firebase Auth)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Email Service (Optional)
GMAIL=your-email@gmail.com
GMAILPASS=your-app-password

# Redis (Optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Payment Gateways (Optional)
RAZORPAY_KEY_ID=your-key-id
RAZORPAY_KEY_SECRET=your-key-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
